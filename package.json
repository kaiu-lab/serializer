{
    "name": "@kaiu/serializer",
    "version": "0.5.5",
    "description": "Simple JSON deserializer for typescipt applications",
    "main": "./bundles/serializer.umd.js",
    "types": "./index.d.ts",
    "scripts": {
        "build:umd": "webpack --config webpack.config.umd.ts",
        "build:dist": "npm run build:umd",
        "build:clean": "del-cli dist",
        "test": "karma start --single-run && npm run build:dist && npm run build:clean",
        "test:watch": "karma start --auto-watch",
        "commit": "git-cz",
        "copyfiles": "copyfiles package.json LICENSE README.md CHANGELOG.md dist",
        "prerelease": "npm test",
        "release:git": "git add package.json && git commit -m \"chore: bump version number\" && standard-version --first-release && git push --follow-tags origin master",
        "release:npm": "npm run build:dist && npm run copyfiles && npm publish dist",
        "release": "npm run release:git && npm run release:npm",
        "postrelease": "npm run build:clean",
        "commitmsg": "validate-commit-msg",
        "codecov": "cat coverage/lcov.info | codecov"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kaiu-io/serializer.git"
    },
    "keywords": [
        "typescript",
        "serializer"
    ],
    "author": "Supamiu",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kaiu-io/serializer/issues"
    },
    "homepage": "https://github.com/kaiu-io/serializer#readme",
    "devDependencies": {
        "@types/chai": "^4.0.0",
        "@types/html-webpack-plugin": "^2.11.2",
        "@types/mocha": "^2.2.41",
        "@types/node": "^8.0.10",
        "@types/sinon": "^2.1.2",
        "@types/sinon-chai": "^2.7.26",
        "@types/webpack": "^3.0.4",
        "chai": "^4.0.0",
        "codecov": "^2.1.0",
        "commitizen": "^2.8.1",
        "concurrently": "^3.0.0",
        "copyfiles": "^1.2.0",
        "core-js": "^2.4.1",
        "cz-conventional-changelog": "^2.0.0",
        "del-cli": "^1.0.0",
        "dtsbundler-webpack-plugin": "^1.0.0",
        "fork-ts-checker-webpack-plugin": "^0.2.2",
        "html-webpack-plugin": "^2.28.0",
        "husky": "^0.14.3",
        "istanbul-instrumenter-loader": "^2.0.0",
        "karma": "^1.4.1",
        "karma-chrome-launcher": "^2.1.1",
        "karma-coverage-istanbul-reporter": "^1.0.0",
        "karma-mocha": "^1.3.0",
        "karma-mocha-reporter": "^2.2.3",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-webpack": "^2.0.1",
        "mocha": "^3.3.0",
        "reflect-metadata": "^0.1.10",
        "rxjs": "^5.0.1",
        "sinon": "^2.0.0",
        "sinon-chai": "^2.8.0",
        "standard-version": "^4.0.0",
        "ts-loader": "2.2.2",
        "ts-node": "^3.0.0",
        "tslint": "^5.1.0",
        "tslint-loader": "^3.5.3",
        "typescript": "^2.4.1",
        "uglifyjs-webpack-plugin": "^0.4.6",
        "validate-commit-msg": "^2.8.0",
        "webpack": "^3.2.0",
        "webpack-angular-externals": "^1.0.0",
        "webpack-dev-server": "^2.2.0",
        "webpack-rxjs-externals": "^1.0.0",
        "zone.js": "^0.8.4"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        }
    }
}
